@model rolesDemoSSD.Models.MyUser

@{
    ViewData["Title"] = "Account";
}

<h1>Your Account</h1>
<br />

<div>
    <h4>Login and security</h4> <a asp-action="Edit" asp-route-id="@Model.UserID">Edit</a>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>

    <br />

    <h4>Address</h4> <a asp-action="Edit" asp-route-id="@Model.UserID">Edit</a>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetAddress)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City) BC @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
    </dl>


</div>


<a asp-action="Index">Back to Home</a>
